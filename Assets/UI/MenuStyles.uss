.menu-button:hover {
    scale: 1.2 1.2;
    transition-duration: 0.4s;
    transition-timing-function: ease-in-out-circ;
    margin-top: 1%;
    margin-right: 1%;
    margin-bottom: 1%;
    margin-left: 1%;
}

.button:active {
    transition: transform 0.2s ease;
    transform-origin: center;
    scale: 1.2 1.2;
    opacity: 0.75;
    overflow: visible;
    transition-timing-function: ease-in;
    transition-duration: 1s;
    transition-delay: 0.4s;
}

